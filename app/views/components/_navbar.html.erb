
<div class="navbar-wagon">
  <!-- Logo -->

  <a href="grandmoms_path" class="navbar-wagon-brand">
    <%= image_tag 'grandma.png', alt: "logo" %>
  </a>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to 'Add a Grandma', new_grandmom_path, class: 'navbar-wagon-item navbar-wagon-link' %>
    <%= link_to 'All Grandmoms', grandmoms_path, class: 'navbar-wagon-item navbar-wagon-link' %>

    <% if user_signed_in? %>
      <%= link_to 'My Bookings', bookings_path, class: 'navbar-wagon-item navbar-wagon-link' %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: 'navbar-wagon-item navbar-wagon-link' %>
      <%= link_to 'Register', new_user_registration_path, class: 'navbar-wagon-item navbar-wagon-link' %>
    <% end %>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_user %>
          <div class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
            <%= cl_image_tag current_user.photo, width: 150, height: 150, crop: :thumb, gravity: :face, class: "avatar" %>
          </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to 'My Profile', user_path(current_user)%></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
          </ul>
          <% else %>
            <div class="navbar-links">
              <%= link_to 'Sign up', new_user_registration_path %>
              <%= link_to 'Log in', new_user_session_path %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to 'Add Grandma', new_grandmom_path, class: 'navbar-wagon-item navbar-wagon-link' %>
        </li>
        <li>
          <%= link_to 'My Bookings', bookings_path, class: 'navbar-wagon-item navbar-wagon-link' %>
        </li>
        <li>
          <% if user_signed_in? %>
            <%= link_to 'Log Out', destroy_user_session_path, method:'delete', class: 'navbar-wagon-item navbar-wagon-link' %>
            <%= link_to 'My Dashboard', user_path(current_user), class: 'navbar-wagon-item navbar-wagon-link' %>
          <% else %>
            <%= link_to 'Sign In', new_user_session_path, class: 'navbar-wagon-item navbar-wagon-link' %>
            <%= link_to 'Register', new_user_registration_path, class: 'navbar-wagon-item navbar-wagon-link' %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
