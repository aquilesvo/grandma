
<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag 'grandma.png', alt: "logo" %>
  </a>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to 'Add Grandma', new_grandmom_path, class: 'navbar-wagon-item navbar-wagon-link' %>

    <% if user_signed_in? %>
      <%= link_to 'Log Out', destroy_user_session_path, method:'delete', class: 'navbar-wagon-item navbar-wagon-link' %>
      <%= link_to 'My Bookings', bookings_path, class: 'navbar-wagon-item navbar-wagon-link' %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: 'navbar-wagon-item navbar-wagon-link' %>
      <%= link_to 'Register', new_user_registration_path, class: 'navbar-wagon-item navbar-wagon-link' %>
    <% end %>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <i class="far fa-user-circle avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"></i>
        <!-- # uncomment when logged in -->
       <!--  <img src="" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"> -->
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Sign Up</a></li>
          <li><a href="#">Add Grandma</a></li>
          <li><a href="#">My Bookings</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to 'Add Grandma', new_grandmom_path, class: 'navbar-wagon-item navbar-wagon-link' %>
        </li>
        <li>
          <%= link_to 'My Bookings', bookings_path, class: 'navbar-wagon-item navbar-wagon-link' %>
        </li>
        <li>
          <% if user_signed_in? %>
            <%= link_to 'Log Out', destroy_user_session_path, method:'delete', class: 'navbar-wagon-item navbar-wagon-link' %>
          <% else %>
            <%= link_to 'Sign In', new_user_session_path, class: 'navbar-wagon-item navbar-wagon-link' %>
            <%= link_to 'Register', new_user_registration_path, class: 'navbar-wagon-item navbar-wagon-link' %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
