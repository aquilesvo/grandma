<h3>Find the right Grandma' for every purpose</h3>

<div class="icons-container">
  <%= link_to "Childcare", grandmoms_path({childcare: true}), class: "btn btn-primary" %>
  <%= link_to "Storytelling", grandmoms_path({storytelling: true}), class: "btn btn-primary" %>
  <%= link_to "Go for a walk", grandmoms_path({goforawalk: true}), class: "btn btn-primary"  %>
  <%= link_to "Cooking & Baking", grandmoms_path({cooking: true}), class: "btn btn-primary" %>
</div>

<div class="grandmom-container">
  <div class="container">
    <div class="row">
      <% @grandmoms.each do |grandmom| %>
        <div class="col-md-4">
          <div class="card">
            <% unless grandmom.photo.blank? %>
              <div class="card-body" style="background-image: url('<%= cl_image_path grandmom.photo, height: 300, width: 400, crop: :fill %>')">
                <h4 class="card-grandmom-name"><%= link_to grandmom.first_name, grandmom_path(grandmom)%></h4>
              </div>
              <% else %>
              <div class="card-body" style="background-image: url('https://source.unsplash.com/random')">
                <h5 class="card-grandmom-name"><%= link_to grandmom.first_name, grandmom_path(grandmom)%></h5>
              </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>">
  </div>
</div>
