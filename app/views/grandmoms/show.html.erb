<h1> <%= @grandmom.last_name %></h1>
<p>Here you can see one specific Grandmom (ID)</p>

<ul>
  <li><%= @grandmom.first_name %> <%= @grandmom.last_name %></li>
  <li><%= image_tag @grandmom.photo.url(:bright_face) %></li>
  <li><%= @grandmom.address %></li>
  <li><%= @grandmom.description %></li>
  <li><%= @grandmom.price %></li>
</ul>

<%= link_to "back", grandmoms_path, class: "btn btn-primary" %>
<% if policy(@grandmom).update? %> <%= link_to "Edit", edit_grandmom_path(@grandmom), class: "btn btn-primary" %> <% end %>
<% if policy(@grandmom).destroy? %> <%= link_to "Delete", grandmom_path, method:'delete', class: "btn btn-primary" %> <% end %>
<%= link_to "Book", new_grandmom_booking_path(@grandmom), class: "btn btn-primary" %>
